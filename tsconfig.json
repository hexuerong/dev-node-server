{
  "compilerOptions": {
    // 目标语言版本
    "target": "esnext",
    // 指定生成代码的模板标准
    "module": "esnext",
    // "moduleResolution": "node",
    // 指定编译目录（要编译哪个目录）
    "rootDir": "./src",
    // 输出目录
    "outDir": "./dist",
    "strict": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": false,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["node"],
    "sourceMap": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "nodenext"
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "tests/**/*.ts", "tests/**/*.tsx"],
  "exclude": ["node_modules", "dist", "test"]
}
